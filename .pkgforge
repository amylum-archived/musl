name 'musl'
org 'amylum'

licenses 'COPYRIGHT'

configure_flags(
  prefix: '/usr/lib/musl',
  'exec-prefix': '/usr',
  'enable-wrapper': 'gcc'
)

harden

patch '0001-enable-pie-pic.patch'
patch '0002-wrapper-name.patch'

build do
  `sed -i 's/-musl-gcc/-gcc/' /usr/bin/musl-gcc`
  configure
  make
  install
  run "mv -v #{releasedir}/lib/* #{releasedir}/usr/lib/"
  rm 'lib'
end

test do
  # TODO: add tests
end
